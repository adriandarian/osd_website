{
  "name": "site",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "dev:host": "nuxt dev --host",
    "dev:https": "nuxt dev --https",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "typecheck": "nuxt typecheck",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "analyze": "nuxt analyze",
    "prepare": "simple-git-hooks",
    "favicon": "bun run scripts/create-favicon.js"
  },
  "dependencies": {
    "@nuxt/content": "^2.13.4",
    "@nuxt/icon": "^1.10.2",
    "@nuxt/image": "^1.9.0",
    "@pinia/nuxt": "^0.7.0",
    "nuxt": "^4.2.0",
    "pinia": "^2.3.0",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@iconify-json/heroicons": "^1.2.2",
    "@iconify-json/lucide": "^1.2.23",
    "@iconify-json/mdi": "latest",
    "@iconify-json/simple-icons": "^1.2.23",
    "@nuxt/devtools": "latest",
    "@nuxt/eslint": "latest",
    "@nuxt/test-utils": "^3.15.4",
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/seo": "^2.0.1",
    "@nuxtjs/tailwindcss": "^6.12.2",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/vue": "^8.1.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^11.3.0",
    "@vueuse/motion": "^2.2.6",
    "autoprefixer": "^10.4.20",
    "jsdom": "^25.0.1",
    "mermaid": "^11.12.1",
    "oxlint": "^0.16.1",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "sharp": "^0.34.4",
    "simple-git-hooks": "^2.12.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8",
    "vue-tsc": "^2.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun run typecheck"
  }
}
